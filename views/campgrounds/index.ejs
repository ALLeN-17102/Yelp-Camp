<% layout('layouts/boilerplate') %>
<div id="map" style="width: 100%; height: 500px;" class="mb-3"></div>
    <h1 style="text-align: center; " class="mb-3">All campgrounds</h1>
    <!-- <div>
        <a href="/campgrounds/new">Add New Campground</a>
    </div> -->
    <ol>
        <% for(let camp of campgrounds){ %>
            <div class="card mb-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if(camp.images.length){ %>
                        <img crossorigin="anonymous" style="width: 400px;height: 200px;object-fit: cover;" class="image-fluid" alt="" src="<%= camp.images[0].url %>">
                        <% }else{ %>
                            <img crossorigin="anonymous" style="width: 400px;height: 200px;object-fit: cover;" class="image-fluid" alt="" src="https://res.cloudinary.com/dipjm9o3o/image/upload/v1711704080/YelpCamp/wzdslakqjzkeonbwx5ft.jpg">
                            <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title"><%= camp.title %></h5>
                            <!-- <h5 class="card-title"><%# camp.properties.popUpMarkup %></h5> -->
                            <p class="card-text"><%= camp.description %></p>
                            <p class="card-text"><small class="text-muted"><%= camp.location    %></small></p>
                            <a  class="btn btn-primary" href="/campgrounds/<%= camp._id %>">View <%= camp.title %></a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- <li><a href="/campgrounds/<%#camp._id %>"><%#camp.title%></a></li> -->
            <% } %>
    </ol>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN %>';
    const campgrounds = {features:<%- JSON.stringify(campgrounds) %>};
</script>
<script src="/javascripts/clusterMap.js"></script>

